{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pub-lib-1/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/pub-lib-1",
        "main": "packages/pub-lib-1/src/index.ts",
        "tsConfig": "packages/pub-lib-1/tsconfig.lib.json",
        "assets": ["packages/pub-lib-1/*.md"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "noVerify": true,
        "postTargets": ["semver:publish", "semver:github"],
        "commitMessageFormat": "release(${projectName}): ðŸš¢ cut release to ${version}"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/pub-lib-1/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/pub-lib-1"],
      "options": {
        "jestConfig": "packages/pub-lib-1/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
